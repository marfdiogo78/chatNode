doctype html
html(lang='pt-br')
  head
    meta(charset='UTF-8')
    title Multiroom Chat
    // bootstrap - link cdn
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7', crossorigin='anonymous')
    // estilo
    link(href='css/style.css', rel='stylesheet')
  body
    .container
      .row.vertical-offset-80
        .col-md-4.col-md-offset-4
          .panel.panel-default
            .panel-heading
              .row-fluid.user-row
                img.img-responsive(src='images/multiroom_chat_2.png', alt='Multiroom Chat')
            .panel-body
              form.form-signin(accept-charset='UTF-8', role='form', action="/chat", method="post")
                fieldset
                  label.panel-login
                    .login_result
                  input#apelido.form-control(placeholder='Nome ou apelido', type='text', name='nome')
                  div.erros
                    if (validation.length > 0)
                      each val in validation
                        p= val.msg
                  br
                  input#entrar.btn.btn-lg.btn-success.btn-block(type='submit', value='Entrar Â»')